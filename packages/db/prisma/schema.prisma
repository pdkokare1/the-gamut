// packages/db/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==========================================
// 1. CORE DATA: ARTICLES & NARRATIVES
// ==========================================

model Article {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  headline        String
  summary         String
  
  // -- Metadata & Filters --
  source          String
  category        String
  politicalLean   String
  
  url             String   @unique
  imageUrl        String?
  audioUrl        String?
  publishedAt     DateTime @default(now())
  
  // -- AI Analysis --
  analysisType    AnalysisType @default(Full)
  sentiment       Sentiment    @default(Neutral)
  analysisVersion String       @default("3.6") 
  
  // -- Scores --
  biasScore            Float    @default(0)
  biasLabel            String?
  biasComponents       Json?    // Mixed type in Mongoose -> Json in Prisma
  
  credibilityScore     Float    @default(0)
  credibilityGrade     String?
  credibilityComponents Json?
  
  reliabilityScore     Float    @default(0)
  reliabilityGrade     String?
  reliabilityComponents Json?
  
  trustScore           Float    @default(0)
  trustLevel           String?
  
  // -- Coverage Stats --
  coverageLeft   Float @default(0)
  coverageCenter Float @default(0)
  coverageRight  Float @default(0)
  
  // -- Clustering & Feed Logic --
  clusterId      Int?
  clusterTopic   String?
  country        String  @default("Global")
  primaryNoun    String?
  secondaryNoun  String?
  
  // Feed Optimization: Hides older versions of stories
  isLatest       Boolean @default(true)
  
  // -- Vector Data --
  embedding      Float[]
  
  keyFindings     String[]
  recommendations String[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // -- Relations --
  // Many-to-Many relation with Profile (Saved Articles)
  savedByProfiles   Profile[]     @relation(fields: [savedByProfileIds], references: [id])
  savedByProfileIds String[]      @db.ObjectId

  activityLogs      ActivityLog[]

  // -- Indexes --
  // NOTE: MongoDB Text Indexes (weighted) must be created manually in Atlas.
  // Mongoose: { headline: 'text', summary: 'text', weights: ... }
  
  @@index([category, politicalLean, isLatest, publishedAt(sort: Desc)]) // For You Feed
  @@index([politicalLean, trustScore, publishedAt(sort: Desc)])         // Trusted Feed
  @@index([clusterId, publishedAt(sort: Desc)])                         // Cluster View
  @@index([country, category, isLatest, publishedAt(sort: Desc)])       // Regional News
  @@index([isLatest, publishedAt(sort: Desc)])
  
  @@map("articles")
}

model Narrative {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  clusterId        Int      @unique
  lastUpdated      DateTime @default(now())
  
  masterHeadline   String
  executiveSummary String
  
  sourceCount      Int      @default(0)
  sources          String[]
  
  // -- Deep Analysis --
  consensusPoints  String[]
  
  // Uses Composite Type
  divergencePoints DivergencePoint[]

  category         String?
  country          String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("narratives")
}

// ==========================================
// 2. USER DATA: PROFILES & ACTIVITY
// ==========================================

model Profile {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique // Auth ID (Firebase)
  
  // Sparse Indexes: MongoDB allows multiple nulls if strictly typed as optional/unique
  email                 String?  @unique
  phoneNumber           String?  @unique
  
  username              String   @unique
  
  // -- Stats --
  articlesViewedCount    Int      @default(0)
  comparisonsViewedCount Int      @default(0)
  articlesSharedCount    Int      @default(0)
  
  // -- Gamification --
  currentStreak         Int      @default(0)
  lastActiveDate        DateTime @default(now())
  badges                Badge[]
  
  // -- Saved Content --
  savedArticles         Article[] @relation(fields: [savedArticleIds], references: [id])
  savedArticleIds       String[]  @db.ObjectId
  
  // -- Personalization --
  userEmbedding         Float[]
  
  // -- Notifications --
  fcmToken              String?
  notificationsEnabled  Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Relations
  activityLogs          ActivityLog[]
  userStats             UserStats?

  @@map("profiles")
}

model UserStats {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique
  
  totalTimeSpent        Int      @default(0) // Seconds
  averageAttentionSpan  Int      @default(0) // Seconds
  
  // The "Echo Chamber" Meter
  leanExposure          LeanExposure? 
  
  // Topic Velocity: Dynamic keys require Json (Map<String, Number>)
  topicInterest         Json?
  
  engagementScore       Float    @default(50)
  lastUpdated           DateTime @default(now())

  // Link to Profile
  user                  Profile  @relation(fields: [userId], references: [userId])

  @@map("userstats") 
}

model ActivityLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  user      Profile  @relation(fields: [userId], references: [userId])
  userId    String   
  
  // Mongoose says required: true. Linking strictly to Article.
  article   Article  @relation(fields: [articleId], references: [id])
  articleId String   @db.ObjectId
  
  action    ActionType @default(view_analysis)
  timestamp DateTime   @default(now())

  // Indexes for Stats Queries
  @@index([userId, timestamp(sort: Desc)])
  @@index([userId, action, timestamp(sort: Desc)])
  
  // NOTE: TTL Index (expireAfterSeconds) must be set manually in MongoDB
  @@map("activitylogs")
}

// ==========================================
// 3. SYSTEM, AI CONFIG & CACHE
// ==========================================

model Prompt {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  type        PromptType @unique
  text        String
  version     Int        @default(1)
  active      Boolean    @default(true)
  description String?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("prompts")
}

model SystemConfig {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  value       String[] 
  lastUpdated DateTime @default(now())

  @@map("systemconfigs")
}

model EmergencyContact {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  serviceName String
  description String?
  number      String
  scope       String   // e.g. "National", "Local"
  hours       String   @default("24x7")
  country     String   @default("India")
  isGlobal    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("emergencycontacts")
}

model Cache {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  data        Json
  expiresAt   DateTime // Use with TTL index in Mongo
  createdAt   DateTime @default(now())

  @@map("cache")
}

// ==========================================
// 4. TYPES & ENUMS
// ==========================================

// Composite Types (MongoDB specific features)

type Badge {
  id          String
  label       String
  icon        String
  description String
  earnedAt    DateTime @default(now())
}

type LeanExposure {
  Left   Float @default(0)
  Center Float @default(0)
  Right  Float @default(0)
}

type DivergencePoint {
  point        String
  perspectives Perspective[]
}

type Perspective {
  source String
  stance String
}

// Enums

enum PromptType {
  ANALYSIS
  GATEKEEPER
  ENTITY_EXTRACTION
}

enum AnalysisType {
  Full
  SentimentOnly
}

enum Sentiment {
  Positive
  Negative
  Neutral
}

enum ActionType {
  view_analysis
  view_comparison
  share_article
  read_external
}
