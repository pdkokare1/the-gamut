// packages/db/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==========================================
// 1. CORE DATA: ARTICLES & NARRATIVES
// ==========================================

model Article {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  headline        String
  summary         String
  
  // -- Metadata & Filters --
  source          String
  category        String
  politicalLean   String
  
  url             String   @unique
  imageUrl        String?
  audioUrl        String?
  publishedAt     DateTime @default(now())
  
  // -- AI Analysis --
  analysisType    AnalysisType @default(Full)
  sentiment       Sentiment    @default(Neutral)
  analysisVersion String       @default("3.6") // Matched Mongoose Default
  
  // -- Scoring & Metrics --
  biasScore            Float    @default(0)
  biasLabel            String?
  biasComponents       Json?    // Matches Mongoose "Mixed"
  
  credibilityScore     Float    @default(0)
  credibilityGrade     String?
  credibilityComponents Json?
  
  reliabilityScore     Float    @default(0)
  reliabilityGrade     String?
  reliabilityComponents Json?
  
  trustScore           Float    @default(0)
  trustLevel           String?

  // -- Coverage Stats --
  coverageLeft   Float @default(0)
  coverageCenter Float @default(0)
  coverageRight  Float @default(0)
  
  // -- Clustering & Feed Logic --
  clusterId      Int?
  clusterTopic   String?
  country        String  @default("Global")
  primaryNoun    String?
  secondaryNoun  String?
  
  // Feed Optimization: Hides older versions of stories
  isLatest       Boolean @default(true)
  
  // -- Vector Data --
  embedding      Float[]
  
  keyFindings     String[]
  recommendations String[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // -- Relations --
  savedByProfiles   Profile[]     @relation(fields: [savedByProfileIds], references: [id])
  savedByProfileIds String[]      @db.ObjectId

  activityLogs      ActivityLog[]

  // -- Indexes (Ported from Mongoose) --
  @@index([category, politicalLean, isLatest, publishedAt(sort: Desc)]) // For You Feed
  @@index([politicalLean, trustScore, publishedAt(sort: Desc)])         // Trusted Feed
  @@index([clusterId, publishedAt(sort: Desc)])                         // Cluster View
  @@index([country, category, isLatest, publishedAt(sort: Desc)])       // Regional News
  @@index([isLatest, publishedAt(sort: Desc)])
  
  // Mapped to existing Mongoose collection
  @@map("articles")
}

model Narrative {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  clusterId        Int      @unique
  lastUpdated      DateTime @default(now())
  
  masterHeadline   String
  executiveSummary String
  
  sourceCount      Int      @default(0)
  sources          String[]
  
  // Stored as arrays/JSON in Prisma
  consensusPoints  String[]
  divergencePoints Json[]   // Array of { point: string, perspectives: [...] }

  category         String?
  country          String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Mapped to existing Mongoose collection
  @@map("narratives")
}

// ==========================================
// 2. USER DATA: PROFILES & ACTIVITY
// ==========================================

model Profile {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique // Auth ID (Firebase)
  email                 String?  @unique
  phoneNumber           String?  @unique
  username              String   @unique
  
  // -- Stats --
  articlesViewedCount    Int      @default(0)
  comparisonsViewedCount Int      @default(0)
  articlesSharedCount    Int      @default(0)
  
  // -- Gamification --
  currentStreak         Int      @default(0)
  lastActiveDate        DateTime @default(now())
  badges                Badge[]
  
  // -- Saved Content --
  savedArticles         Article[] @relation(fields: [savedArticleIds], references: [id])
  savedArticleIds       String[]  @db.ObjectId
  
  // -- Personalization --
  userEmbedding         Float[]
  
  // -- Notifications --
  fcmToken              String?
  notificationsEnabled  Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  // Relations
  activityLogs          ActivityLog[]
  userStats             UserStats?

  // Mapped to existing Mongoose collection
  @@map("profiles")
}

model UserStats {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique
  
  totalTimeSpent        Int      @default(0)
  averageAttentionSpan  Int      @default(0)
  
  // The "Echo Chamber" Meter
  leanExposure          Json?    // { Left: number, Center: number, Right: number }
  
  // Topic Velocity
  topicInterest         Json?    // Map<string, number>
  
  engagementScore       Float    @default(50)
  lastUpdated           DateTime @default(now())

  // Link to Profile (Optional/Loose in Mongo, Strict here via userId)
  user                  Profile  @relation(fields: [userId], references: [userId])

  // Mapped to existing Mongoose collection
  @@map("userstats") 
}

model ActivityLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  user      Profile  @relation(fields: [userId], references: [userId])
  userId    String   
  
  article   Article? @relation(fields: [articleId], references: [id])
  articleId String?  @db.ObjectId
  
  action    ActionType @default(view_analysis)
  timestamp DateTime   @default(now())

  @@index([userId, timestamp(sort: Desc)])
  
  // Mapped to existing Mongoose collection
  @@map("activitylogs")
}

// ==========================================
// 3. SYSTEM & UTILITIES
// ==========================================

model SystemConfig {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  value       String[] // Fixed: Mongoose was strict [String], not Json
  lastUpdated DateTime @default(now())

  // Mapped to existing Mongoose collection
  @@map("systemconfigs")
}

model EmergencyContact {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  serviceName String
  description String?
  number      String
  scope       String   // e.g. "National", "Local"
  hours       String   @default("24x7")
  country     String   @default("India")
  isGlobal    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Mapped to existing Mongoose collection
  @@map("emergencycontacts")
}

// ==========================================
// 4. TYPES & ENUMS
// ==========================================

type Badge {
  id          String
  label       String
  icon        String
  description String
  earnedAt    DateTime @default(now())
}

enum AnalysisType {
  Full
  SentimentOnly
}

enum Sentiment {
  Positive
  Negative
  Neutral
}

enum ActionType {
  view_analysis
  view_comparison
  share_article
  read_external
}
