// packages/db/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==========================================
// 1. CORE DATA: ARTICLES & NARRATIVES
// ==========================================

model Article {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  headline        String
  summary         String
  
  // -- Metadata & Filters --
  source          String
  category        String
  politicalLean   String
  
  url             String   @unique
  imageUrl        String?
  audioUrl        String?
  publishedAt     DateTime @default(now())
  
  // -- AI Analysis --
  analysisType    AnalysisType @default(Full)
  sentiment       Sentiment    @default(Neutral)
  analysisVersion String       @default("Gemini-2.5")
  
  // -- Scoring & Metrics --
  biasScore            Float    @default(0)
  biasLabel            String?
  biasComponents       Json?    // Replaces Schema.Types.Mixed
  
  credibilityScore     Float    @default(0)
  credibilityGrade     String?
  credibilityComponents Json?
  
  reliabilityScore     Float    @default(0)
  reliabilityGrade     String?
  reliabilityComponents Json?
  
  trustScore           Float    @default(0)
  trustLevel           String?

  // -- Coverage Stats --
  coverageLeft   Float @default(0)
  coverageCenter Float @default(0)
  coverageRight  Float @default(0)
  
  // -- Clustering --
  clusterId      Int?
  clusterTopic   String?
  country        String  @default("Global")
  primaryNoun    String?
  secondaryNoun  String?
  
  // -- Vector Data --
  // Note: Prisma does not support 'select: false'. We will exclude this field in API queries manually.
  embedding      Float[]
  
  keyFindings     String[]
  recommendations String[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // -- Relations --
  // "savedByProfiles" allows us to find users who saved this article (New Feature)
  savedByProfiles   Profile[]     @relation(fields: [savedByProfileIds], references: [id])
  savedByProfileIds String[]      @db.ObjectId

  activityLogs      ActivityLog[]

  // -- Indexes --
  // Mapped from old Mongoose Compound Indexes
  @@index([category, politicalLean, publishedAt])
  @@index([politicalLean, trustScore, publishedAt]) // Trusted News Feed
  @@index([clusterId, publishedAt])                 // Cluster View
  @@index([country, category, publishedAt])         // Regional News
  
  // Note: Text Indexes (headline: 'text') must be created in MongoDB Atlas directly.
}

model Narrative {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  clusterId        Int      @unique
  lastUpdated      DateTime @default(now())
  
  masterHeadline   String
  executiveSummary String
  
  sourceCount      Int      @default(0)
  sources          String[]
  
  consensusPoints  String[]
  divergencePoints DivergencePoint[] // Uses Composite Type below

  category         String?
  country          String?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Mongoose had a TTL index of 14 days. 
  // You should verify this index exists in Atlas: { updatedAt: 1 }, { expireAfterSeconds: 1209600 }
}

// ==========================================
// 2. USER DATA: PROFILES & ACTIVITY
// ==========================================

model Profile {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  userId                String   @unique // Auth ID (Firebase)
  email                 String   @unique
  username              String   @unique
  
  // -- Stats --
  articlesViewedCount    Int      @default(0)
  comparisonsViewedCount Int      @default(0)
  articlesSharedCount    Int      @default(0)
  
  // -- Gamification --
  currentStreak         Int      @default(0)
  lastActiveDate        DateTime @default(now())
  badges                Badge[]
  
  // -- Saved Content --
  savedArticles         Article[] @relation(fields: [savedArticleIds], references: [id])
  savedArticleIds       String[]  @db.ObjectId
  
  // -- Personalization --
  userEmbedding         Float[]
  
  // -- Notifications --
  fcmToken              String?
  notificationsEnabled  Boolean  @default(false)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  activityLogs          ActivityLog[]
}

model ActivityLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  user      Profile  @relation(fields: [userId], references: [userId])
  userId    String   
  
  article   Article? @relation(fields: [articleId], references: [id])
  articleId String?  @db.ObjectId
  
  action    ActionType @default(view_analysis)
  timestamp DateTime   @default(now())

  // Optimized for "Get user history"
  @@index([userId, timestamp(sort: Desc)])
  // Optimized for "Get specific action history"
  @@index([userId, action, timestamp(sort: Desc)])
}

// ==========================================
// 3. SYSTEM & UTILITIES
// ==========================================

model Prompt {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  type        PromptType @unique
  text        String
  version     Int        @default(1)
  active      Boolean    @default(true)
  description String?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model EmergencyContact {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  serviceName String
  description String?
  number      String
  scope       String
  hours       String   @default("24x7")
  country     String   @default("India")
  isGlobal    Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SystemConfig {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  key         String   @unique
  value       String[]
  lastUpdated DateTime @default(now())
}

model Cache {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique
  data      Json
  expiresAt DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([expiresAt])
}

// ==========================================
// 4. TYPES & ENUMS (STRICT TYPING)
// ==========================================

// Composite Types (Embedded Documents)
type Badge {
  id          String
  label       String
  icon        String
  description String
  earnedAt    DateTime @default(now())
}

type DivergencePoint {
  point        String
  perspectives Perspective[]
}

type Perspective {
  source String
  stance String
}

// Enums (Replaces String checks)
enum AnalysisType {
  Full
  SentimentOnly
}

enum Sentiment {
  Positive
  Negative
  Neutral
}

enum ActionType {
  view_analysis
  view_comparison
  share_article
  read_external
}

enum PromptType {
  ANALYSIS
  GATEKEEPER
  ENTITY_EXTRACTION
}
